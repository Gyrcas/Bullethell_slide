script/source = "extends Node2D

@onready var stars : ParallaxLayer = $background/stars
const stars_speed : float = 20

@onready var anim : AnimationPlayer = $anim

@onready var dialogue : DialoguePlayer = $dialogue

var current_dialogue : int = 0

func _ready() -> void:
	anim.play(\"start\")

func _process(delta : float) -> void:
	stars.motion_offset.x -= delta * stars_speed


func _on_anim_animation_finished(anim_name : String) -> void:
	match anim_name:
		\"start\":
			dialogue.play_from_file(\"res://ressources/dialogues/intro_1.json\")
		\"ship\":
			get_tree().change_scene_to_file(\"res://test.tscn\")

func _input(event : InputEvent) -> void:
	if anim.is_playing() && event.is_action_pressed(\"ui_accept\"):
		anim.advance(anim.current_animation_length)

func _on_dialogue_finished() -> void:
	await get_tree().create_timer(0.1).timeout
	current_dialogue += 1
	match current_dialogue:
		1:
			anim.play(\"ship\")
"

